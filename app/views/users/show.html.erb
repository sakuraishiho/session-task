<!-- app/views/users/show.html.erb -->
<h1>アカウント詳細ページ</h1>
<p><strong>名前:</strong> <%= @user.name %></p>
<p><strong>メールアドレス:</strong> <%= @user.email %></p>
<div>
  <%= link_to '編集', edit_user_path(@user), id: 'edit-user' %>
</div>
<div>
  <%= link_to '削除', @user, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, id: 'destroy-user' %>
</div>